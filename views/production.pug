extends index

block topbar
    p top bar goes here

block scripts
    link(href="https://vjs.zencdn.net/7.4.1/video-js.css" rel="stylesheet")

    script(src="https://vjs.zencdn.net/ie8/ie8-version/videojs-ie8.min.js")
    script(src='https://vjs.zencdn.net/7.4.1/video.js')

block addedstylesheet
    link(rel='stylesheet', href='/stylesheets/productions.css')

block content
    .container-fluid.containsall.rounded.border
        .container.border#productionbox
            .row
                .col-sm-2
                .col-sm-4#showimage
                    - var name = productionData.title
                    case name
                        when 'The Office'
                            img.img-fluid.rounded.mx-auto.logoimage#logos(src="/images/showthumbnail/theOffice.jpg" alt="the office", width='300')
                        when 'Mr. Robot'
                            img.img-fluid.rounded.mx-auto.logoimage#logos(src="/images/showthumbnail/mrRobot.jpg" alt="the office", width='300')
                        when 'Parks and Recreations'
                            img.img-fluid.rounded.mx-auto.logoimage#logos(src="/images/showthumbnail/parkAndRecreations.jpg" alt="the office", width='300')
                        when 'American Gods'
                            img.img-fluid.rounded.mx-auto.logoimage#logos(src="/images/showthumbnail/americanGods.jpg" alt="American Gods", width='300')
                        when 'Game of Thrones'
                            img.img-fluid.rounded.mx-auto.logoimage#logos(src="/images/showthumbnail/gameOfThrones.jpg" alt="Game of Thrones", width='300')
                        when 'Hellboy'
                            img.img-fluid.rounded.mx-auto.logoimage#logos(src="/images/showthumbnail/hellBoy.jpg" alt="Hellboy", width='300')
                        when 'Seinfeld'
                            img.img-fluid.rounded.mx-auto.logoimage#logos(src="/images/showthumbnail/seinfeld.jpg" alt="the sienfeld", width='300')
                        when 'Shameless'
                            img.img-fluid.rounded.mx-auto.logoimage#logos(src="/images/showthumbnail/shameless.jpeg" alt="shameless", width='300')
                        when 'The Walking Dead'
                            img.img-fluid.rounded.mx-auto.logoimage#logos(src="/images/showthumbnail/theWalkingDead.jpg" alt="the walking dead", width='300')
                        when 'True Detective'
                            img.img-fluid.rounded.mx-auto.logoimage#logos(src="/images/showthumbnail/trueDetective.jpg" alt="True detective", width='300')
                        when 'Velvet Buzzsaw'
                            img.img-fluid.rounded.mx-auto.logoimage#logos(src="/images/showthumbnail/velvetBuzzsaw.jpg" alt="velvet buzzsaw", width='300')

                        default
                            img.img-fluid.rounded.mx-auto.logoimage#logos(src="/images/showthumbnail/placeholder.jpg" alt="the office", width='300')


                    //
                        if season
                            h1 &nbsp;- Season #{season}
                .col-sm-4
                    h1= productionData.title
                    p= productionData.showSummary
                .col-sm-2
        .container.border#seasonsandeps
            .row
                .col-2.border
                .col-3.border
                    .dropdown
                        button.buttoncolor.btn.btn-primary.dropdown-toggle(type='button', data-toggle='dropdown')
                            Dropdown Season #{season}
                        .dropdown-menu.buttoncolor
                            - var i = 1;
                            while i <= productionData.seasonCount
                                a#link(href= `./?production=${productionData.id}&seasonSelection=${i}`) Season #{i++}
                                p
            .container.border
                - for (var j =1;j <= episodeCount; j++)
                    if(j == 1 || j % 3 == 0)
                        .row
                            - for (var i = j; i <(3+j); i++ )
                                - if(i >= episodeCount) break;
                                    .col-sm-4.border
                                        .card.epbox
                                            img.card-img-top(src='/images/thumbplaceholders.jpg', alt='Card image', style='width:100%')
                                            .card-body
                                                a#link(href= `./?production=${productionData.id}&seasonSelection=${season}&episodeSelection=${j}`) Episode #{j++} - #{episodeData[j-2].title}

    a(href="../home") Go Home<br><br>
    a(href="../logout") Log Out