doctype html
html
    head
        title #{name} Season #{season}
        style.
            body {
                background: skyblue;
                font-family: verdana;
                color: #fff;
                padding: 30px;
            }

            h1 {
                font-size: 48px;
                text-transform: uppercase;
                letter-spacing: 2px;
                text-align: center;
            }

            p {
                font-size: 16px;
                text-align: center;
            }
    body
        h1 #{prod} Season #{season}
        p #{numOfEpisodes} Episodes
        - var ep = 1;
        ul
            while ep <= numOfEpisodes
                li
                    a(href='S' + season + 'E' + ep) Episode #{ep++}