        }

        i.fa.fa-user {
            padding: 19px;
            color: #09b4ea;
        }
body
    nav.navbar.navbar-default( role="navigation" )
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
        //a.navbar-brand WhiteBox
        div.collapse.navbar-collapse
            ul.nav.navbar-left
                li.dropdown
                    div.btn-group
                        button.btn.btn-default.dropdown-toggle(type="button", data-toggle="dropdown")
                            i.fa.fa-bars.fa-3x
                        ul.dropdown-menu(role="menu")
                            li
                                a(href="/home") Home
                            li.divider
                            li
                                a(href="/productions") Productions
            ul.nav.navbar-right
                li.search
                    input(type="text" id="filterInput" list="productions" placeholder="Search" )
                    datalist(id="productions")
                        each prod in production_list
                            option(value= prod.title)
                                a(href=`/production/?production=${prod.id}`)
                li.search-btn
                    button(class="btn btn-default" type="submit" id="searchbtn")
                        i.fa.fa-search
                    script.
                        $(document).ready(function () {
                            $("#searchbtn").click(function () {
                                if(checksExist($("#filterInput").val()) === true) {

                                    window.location.href = $("#productions option[value='" + $("[list='productions']").val() + "']").find("a").attr("href")
                                }
                            });
                        });

                        function checksExist(inputValue) {
                            console.log(inputValue);
                            var x = document.getElementById("productions");
                            var i;
                            var flag;
                            for (i = 0; i < x.options.length; i++) {
                                if (inputValue == x.options[i].value) {
                                    flag = true;
                                }
                            }
                            return flag

                        }
                li.button
                    button(class="btn btn-default " type="submit")
                        i.fa.fa-envelope.fa-2x
                li.button
                    button(class="btn btn-default" type="submit")
                        i.fa.fa-play.fa-2x
                li.button
                    button(class="btn btn-default " type="submit")
                        i.fa.fa-user.fa-2x
