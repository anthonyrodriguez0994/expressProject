    style.
        nav {
            list-style-type: none;

        }

        nav.navbar.navbar-default {
            background-color: #202c39;
        }

        li.dropdown {

        }

        ul.nav.navbar-left li.dropdown {
            float: left;
        }

        ul.nav.navbar-right li {
            float: left;
        }

        .btn-group {
            margin-bottom: 0px;
            position: relative;
            top: 2px;
        }

        button.btn.btn-default.dropdown-toggle {
            padding: 19px;
            position: relative;
            margin: 0px;
            right: 14px;
