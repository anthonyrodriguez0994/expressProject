block addedstylesheet
    link(rel='stylesheet', href='stylesheets/sidebar.css')

block sidebar
    .wrapper
        
        //
            script(defer='', src='https://use.fontawesome.com/releases/v5.0.13/js/solid.js', integrity='sha384-tzzSw1/Vo+0N5UhStP3bvwWPq+uvzCMfrN1fEFe+xBmv1C/AtVX5K0uZtmcHitFZ', crossorigin='anonymous')
        //
            script(defer='', src='https://use.fontawesome.com/releases/v5.0.13/js/fontawesome.js', integrity='sha384-6OIrr52G08NpOFSZdxxz1xdNSndlD4vdcf/q2myIUVO0VsqaGHJsB0RaBE01VTOY', crossorigin='anonymous')
        script(type='text/javascript').
            $(document).ready(function () {
                $('#sidebarCollapse').on('click', function () {
                    $('#sidebar').toggleClass('active');
                });
            });

        nav#sidebar
            .sidebar-header
                h3 Side Menu
            ul.list-unstyled.components
                p Viewing Options
                li.active
                    a.dropdown-toggle(href='#homeSubmenu', data-toggle='collapse', aria-expanded='false') Watchlist
                    ul#homeSubmenu.collapse.list-unstyled
                        li
                            a(href='#') Watch1
                        li
                            a(href='#') Watch2
                        li
                            a(href='#') Watch3
                li
                    a.dropdown-toggle(href='#pageSubmenu', data-toggle='collapse', aria-expanded='false') Genres
                    ul#pageSubmenu.collapse.list-unstyled
                        li
                            a(href='#') Genre1
                        li
                            a(href='#') Genre2
                        li
                            a(href='#') Genre3
                li
                    a(href='/home') Productions
                li
                    a(href='/login') Login
    //
        #content
            nav.navbar.navbar-expand-lg.navbar.bg
                .col-3
                    button#sidebarCollapse.btn.btn-info(type='button')
                        i.fas.fa-align-left
                        
                            span Open Sidebar
                    button.btn.btn-dark.d-inline-block.d-lg-none.ml-auto(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                        i.fas.fa-align-justify
                    #navbarSupportedContent.collapse.navbar-collapse
                        ul.nav.navbar-nav.ml-auto
                .col-6
                    h1 #{message}
                .col-3

            
                .ui.border
                    .container.border
                        .row
                            .col-sm-12.box.rounded
                                p #{user} has logged in.  Here are some recommended productions (not GoT, Hellboy or Velvet Buzzsaw, we have no episodes in the DB for that)
                                each production in displayProductions
                                    a(href= `./production/?production=${production.id}`)= production.title
                                    p

                    a(href="./logout") Log Out
                    