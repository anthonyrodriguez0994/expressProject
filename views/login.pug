extends index

block scripts
    script(src="javascripts/login.js")

block ui
    .main.container
        .row
            .col-md-6.align-content-center
                h1 Please enter your login credentials to continue.

                form(method='POST' action='/login' class='form-login')
                    div.form-group
                        label(for='username') Username:
                        input#username.form-control(type='text' class='form-control form-control-lg' placeholder='' name='username')
                    div.form-group
                        label(for='password') Password:
                        input#password.form-control(type='password' class='form-control form-control-lg' name='password')
                    div.form-group
                        button.btn.btn-primary(id="loginButton" type='submit') Log in

                h3 Not a member?
                    a(href="./register/")  Sign up!