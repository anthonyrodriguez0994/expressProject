extends index

block ui
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Sign Up
                h2.display-4.m-b-2 #{message}

                form(method='POST' action='/register/createUser')
                    div.form-group
                        label(for='name') Username:
                        input#name.form-control(type='text', name='username')
                    div.form-group
                        label(for='email') Email:
                        input#email.form-control(type='email', name='email')
                    div.form-group
                        label(for='pw') Password:
                        input#pw.form-control(type='password' name='password')
                    div.form-group
                        label(for='pw2') Confirm Password:
                        input#pw2.form-control(type='password' name='confirmPassword')
                    div.form-group
                        button.btn.btn-primary(type='submit') Sign up