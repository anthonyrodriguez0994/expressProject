extends index

block topbar
    include navbar

block scripts
    link(href="https://vjs.zencdn.net/7.4.1/video-js.css" rel="stylesheet")
    script(src="https://vjs.zencdn.net/ie8/ie8-version/videojs-ie8.min.js")
    script(src='https://vjs.zencdn.net/7.4.1/video.js')


block content
    .container-fluid.greeting.text-center#greeting
        .row
            .col-12
                    h1 #{message}
                    button#sidebarCollapse.btn.buttoncolor.fixed-top.btn-info(type='button') Sidebar
    .container.contentsandstuff
            .row
                .col-sm-12.box.rounded
                    p #{user} has logged in.  Here are some recommended productions (not GoT, Hellboy or Velvet Buzzsaw, we have no episodes in the DB for that)
                    //later we will replace these generated links with generated objects from bootstrap
                    each production in displayProductions
                        a(href= `./production/?production=${production.id}`)= production.title
                        p
    a(href="./logout") Log Out
